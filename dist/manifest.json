 {
  "name": "programmers-news-reader",
  "version": "1.0",
  "description": "News reader for programmers",
  "manifest_version": 2,
  "icons": {
    "512": "images/icons/icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "alarms",
    "*://*/"
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
